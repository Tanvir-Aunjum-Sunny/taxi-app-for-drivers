<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    android:weightSum="6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@color/off_black">

        <TextView
            android:id="@+id/newTripNotification"
            style="@style/NotificationLabel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:text="0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/newTrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_button_selected"
            android:text="New Trip"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@color/off_black">

        <Button
            android:id="@+id/startTrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_button_selected"
            android:text="Start A Trip"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/startTripNotification"
            style="@style/NotificationLabel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:text="0"
            android:textStyle="bold" />
    </RelativeLayout>


    <Button
        android:id="@+id/myBookings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/home_button_selected_dark"
        android:text="My Bookings"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>
